@model ResinaSoft_ASP.ViewModels.PersonTaskViewModel.PersonTaskViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Task Of The Person";
}

<h1>Edit Task Of The Person</h1>

<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <form class="whiteText" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="PersonID" type="hidden" />
            <input asp-for="TaskID" type="hidden" />
            <div class="form-group">
                <label asp-for="Person.Name" class="lblTask"></label>
                <div class="info">
                    @Html.DisplayFor(model => model.Person.Name)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Person.LastName" class="lblTask"></label>
                <div class="info">
                    @Html.DisplayFor(model => model.Person.LastName)
                </div>
            </div>
            <div class="form-group">
                <label class="lblTask">Task Name</label>
                <div class="info">
                    @Html.DisplayFor(model => model.Task.Name)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Task.Description" class="lblTask"></label>
                <div class="info">
                    @Html.DisplayFor(model => model.Task.Description)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Task.Deadline" class="lblTask"></label>
                <div class="info">
                    @Html.DisplayFor(model => model.Task.Deadline)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TaskStatus" class="lblTask"></label>
                <select asp-for="TaskStatus" style="width:100%; height:40px">
                    <option value="Started">Started</option>
                    <option value="Complated">Complated</option>
                    <option value="Rejected">Rejected</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
