@model IEnumerable<ResinaSoft_ASP.ViewModels.AddressViewModel.AddressViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Address Of The Person";
}

<h1>@ViewBag.PersonName</h1>
<hr/>
<br />
<a class="upButtonPerson">
    @Html.ActionLink("Add New Address", "Create", new { id = ViewBag.PersonId }, new { @class = "upButtonPerson" })
</a>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.AddressType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.AddressType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CityId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td class="otherAction">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "otherAction" })
            </td>
            <td class="otherAction">
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "otherAction" })
            </td>
        </tr>
        }
    </tbody>
</table>
